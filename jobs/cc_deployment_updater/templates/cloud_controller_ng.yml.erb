  ca_cert_path: '/var/vcap/jobs/cc_deployment_updater/config/certs/db_ca.crt'
<% end %>
<% if_p("ccdb.connection_expiration_timeout") do |expiration_timeout| %>
  connection_expiration_timeout: <%= expiration_timeout %>
<% end %>
